{
    "compilerOptions": {
        "module": "commonjs",
        "baseUrl": ".",
        "outDir": "dist",
        "target": "es2020",
        "lib": ["es2020", "dom"],
        "rootDir": "src",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": false,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}